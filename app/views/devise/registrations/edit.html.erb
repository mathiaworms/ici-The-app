<div class="card-form">
  <div class="card-body">
    <div class="config-card-alias text-center"><%=current_user.alias%></div>

    <div class="separator-small"></div>
    <div class="text-center"><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr de vouloir clore définitivement votre compte?" }, method: :delete, :class => "btn btn-danger" %>
    </div>

    <div class="separator-small"></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <label for="email">Adresse mail</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
    <div class="separator"></div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <label for="password">Nouveau mot de passe</label>
    <%= f.password_field :password,  autofocus: true, autocomplete: "new-password", :class => "form-control" %>
    <div class="separator"></div>
    <small id="ageHelp" class="form-text text-muted">Si changement de mot de passe<% if @minimum_password_length %><br/><%= @minimum_password_length %> caractères minimum<% end %></small>

    <div class="separator-small"></div>
    <label for="password_confirmation">Confirmez nouv. mot de passe</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
    <div class="separator-small"></div>
    
    <label for="current_password">Mot de passe actuel</label>
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
    <small id="currentpassHelp" class="form-text text-muted">Pour vérification d'information</small>
    <div class="separator-small"></div>

    <%= f.submit "Mettre à jour", :class => "btn btn-primary btn-block" %>

    <% end %>
    <div class="separator-small"></div>
    <%= link_to "Revenir à mon profil", :back, class: "btn-tertiary text-center" %>
</div>